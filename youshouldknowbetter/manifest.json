{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "version": "0.3.2",
    "default_locale": "en",
    "description": "__MSG_extDesc__",
    "options_page": "options.html",
    "browser_action": {
       "default_icon":"images/icon.png",
       "default_title":"__MSG_browserActionTitle__",
       "default_popup":"options.html"
    },
    "content_scripts" : [
    {
      "matches" : [
        "*://*/*"
      ],
      "js" : ["contentscript.js"],
      "css": ["overlay.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
    "permissions": [
        "storage",
        "activeTab"
        ]
}
